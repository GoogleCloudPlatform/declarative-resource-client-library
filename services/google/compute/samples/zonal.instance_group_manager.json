{
  "project": "{{project}}",
  "location": "{{zone}}",
  "name": "{{instance_group_manager}}",
  "baseInstanceName":  "dcl",
  "targetSize": 3,
  "instanceTemplate": "{{ref:basic.instance_template.json:selfLink}}",
  "autoHealingPolicies": [
    {
      "healthCheck": "{{ref:https.health_check.json:selfLink}}",
      "initialDelaySec": 120
    }
  ],
  "updatePolicy": {
    "type": "OPPORTUNISTIC",
    "minimalAction": "RESTART",
    "mostDisruptiveAllowedAction": "RESTART",
    "maxSurge": {
      "fixed": 3
    },
    "maxUnavailable": {
      "fixed": 3
    }
  }
}
